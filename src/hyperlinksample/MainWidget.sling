import jk.widget.common

class #widget #main:

ui LayerWidget
{
	VerticalBoxWidget {
		margin = context.getHeightValue("5000um")
		spacing = context.getHeightValue("2000um")
		LabelWidget {
			text = "Hyperlink Sample"
			textColor = Color.black()
			fontFamily = "Times New Roman"
			fontSize = context.getHeightValue("5mm")
		}
		HorizontalBoxWidget hbox {
			spacing = context.getHeightValue("2000um")
			LabelWidget {
				text = "Click the link to print"
				textColor = Color.black()
				fontFamily = "Times New Roman"
				fontSize = context.getHeightValue("3mm")
			}
		}
	}
}

func initializeWidget override
{
	var link = new HyperLinkWidget(context)
	link.setWidgetText("Hello World")
	link.setWidgetTextColor(Color.black())
	link.setWidgetFontSize(context.getHeightValue("3mm"))
	link.setWidgetTextColor(Color.forRGB(255, 0, 0))
	link.setWidgetClickHandler(func {
		println "Hello World!"
	})
	hbox.addWidget(link)
}
