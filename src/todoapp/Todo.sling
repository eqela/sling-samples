class #dataModel:

const MODEL_NAME = "todos"

const PENDING = 0
const DONE = 1

prop id as string #primary #dataField
prop title as string #dataField
prop status as int #dataField #index
prop timeStamp as long #dataField

func onInsert #onInsert
{
	id = "T-" .. String.forLongInteger(SystemClock.asSeconds())
	status = PENDING
	timeStamp = SystemClock.asSeconds()
}
