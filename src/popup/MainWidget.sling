import jk.widget.common

class #widget #main:

ui LayerWidget
{
	CanvasWidget {
		color = Color.white()
	}
	TextButtonWidget showLbl {
		text = "SHOW POPUP"
	}
}

func initializeWidget override
{
	base.initializeWidget()
	showLbl.setWidgetClickHandler(func {
		var popup = new PopupWidget(context)
		popup.setWidgetContent(createPopupContent(popup))
		popup.showPopup(this)
	})
}

func createPopupContent(pp as PopupWidget) as Widget
{
	var vb = VerticalBoxWidget.forContext(context, context.getHeightValue("3mm"), context.getHeightValue("3mm"))
	vb.addWidget(LabelWidget.forText(context, "POPUP HAS SHOWN"))
	var b = LabelWidget.forText(context, "CLOSE POPUP")
	Widget.setWidgetClickHandler(b, func {
		pp.hidePopup()
	})
	vb.addWidget(b)
	var lyr = new LayerWithBackgroundColorWidget(context)
	lyr.setWidgetColor(Color.white())
	lyr.addWidget(vb)
	return lyr
}
