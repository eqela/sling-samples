import jk.widget
import jk.widget.photo
import jk.widget.common

class is ScreenForWidget #screen #main:

func initialize override
{
	base.initialize()
	setWidget(new MyClassWidget(context))
}

class MyClassWidget #widget
{
	ui LayerWidget
	{
		VerticalBoxWidget vb {
			TextButtonWidget btn {
				text = "SELECT PHOTO"
			}
			ImageWidget image {
				imageScaleMethod = ImageWidget.FIT
			}
		}
	}

	func initializeWidget override
	{
		base.initializeWidget()
		var thisWidget = this
		btn.setWidgetClickHandler(func {
			var selector = new PhotoSelector(context)
			selector.openPhotoDialog(this, func(img as Image, filename as string, err as Error) {
				assert not err:
					println "error: " .. err.toString()
				assert img
				onPictureTaken(img, null)
			})
		})
	}

	func onPictureTaken(photo as Image, error as Error)
	{
		assert not error
		assert photo
		photo = photo.scaleToHeightSync(Widget.getHeight(this))
		image.setWidgetImage(photo)
	}
}
